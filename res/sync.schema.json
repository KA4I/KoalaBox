{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sync configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "URL of a JSON Schema that corresponds to this config."
    },
    "variables": {
      "type": "object",
      "description": "Variables that will be used by inja for substitution during rendering",
      "default": {},
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          },
          {
            "type": "integer"
          },
          {
            "type": "boolean"
          }
        ]
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "text"
              },
              "template_file": {
                "type": "string"
              },
              "destination_dir": {
                "type": "string"
              },
              "file_name": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "template_file"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "json"
              },
              "schema_file": {
                "type": "string"
              },
              "destination_file": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "schema_file",
              "destination_file"
            ],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": [
    "tasks"
  ],
  "additionalProperties": false
}